  # game
  chances=3
  no=9
  while chances !=0:
      n=int(input('Enter a number'))
      if(n==no):
          print('YOU WIN')
          break
      chances=chances-1   
  if(chances<=0):
      print("Sorry you loose")
  # Car game
     is_start=False
     is_stop=False
  while True:
      var=input('Enter a val:')
      var=var.upper()
      
      if var=="START":
          if(is_start):
              print('Already started')
          else:
               print('Car started')
               is_start=True
      elif var=="STOP":
          if(is_stop):
              print('Already stopped')
          else:
              print('Car stopped')
              is_stop=True
      elif var=="HELP":
          print('''
  start- start the car
  stop-  stop the car
  quit-  quit 
  '''              )
      elif var=="QUIT":
         break
     
      else :
         print(" INVALID")
     
